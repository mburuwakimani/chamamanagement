<h1>Chamas</h1>

{{!-- add chamas form --}}

<form action="/chamas/add" method="POST">
  <input type="text" value="" name="name" placeholder="Name">
  
  <br><br>

  <input type="text" value="" name="country" placeholder="Country"> 
  
  <br><br>

  <input type="submit" value="Create Chama">
</form>



{{!-- display list of chamas with edit and delete button --}}

<div class="chamas-list">
    <style>
        table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
        th, td{
            padding: 15px;
        }
    </style>
    <ul>
        <table>
            <th>Name</th><th>Options<th></th>
        {{#each Chamas }}
            <tr>
             <td> {{ name }}</td><td><span><a href ="/chamas/{{id}}">Delete</a></td></span></td>
            </tr>
        {{ else }}
            <li> No chamas available</li>
        {{/each }}
        </table>
    </ul>
</div>