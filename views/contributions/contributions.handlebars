<h1>Contributions</h1>

{{!-- add Contribution form --}}
{{!-- 
depositDate, payRefNumber, depositAmount, fundAssignment, comment --}}

<form action="/contributions/add" method="POST">
  <input type="text" value="" name="depositDate" placeholder="MM/DD/YYY">
  
  <br><br> 

  <input type="text" value="" name="payRefNumber" placeholder="Payment Ref Number"> 
  
  <br><br>

  <input type="text" value="" name="depositAmount" placeholder="Contribution Amount"> 

  <br><br>

  <input type="text" value="" name="fundAssignment" placeholder="Fund Assigned to.."> 

  <br><br>

  <input type="text" value="" name="comment" placeholder="Contribution Comments"> 

  <br><br>

  <input type="submit" value="Add Contribution">
</form>



{{!-- display list of contributinos with edit and delete button --}}

<div class="contribution-list">
    <style>
        table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
        th, td{
            padding: 15px;
        }
    </style>
    <ul>
        <table>
            <th>Deposit Date</th><th>Payment Reference</th><th>Deposit Amount</th><th>Fund Assingment</th><th>Comment</th><th>Options</th>
        {{#each Contributions }}
            <tr>
             <td>{{ depositDate}}</td> <td> {{payRefNumber}}</td> <td>{{ depositAmount}}</td> <td>{{fundAssignment }}</td>  <td>{{comment }}</td><td><span><a href="/contributions/{{id}}">Delete</a></span></td>
        {{ else }}
            <li> No fines available</li>
        {{/each }}
        </table>
    </ul>
</div>