<h1>Goals</h1>

{{!-- add Goals form --}}

<form action="/goal/add" method="POST">
  <input type="text" value="" name="name" placeholder="Goal Name">
  
  <br><br>

  <input type="text" value="" name="duration" placeholder="Duration"> 
  
  <br><br>

  <input type="text" value="" name="riskRanking" placeholder="Risk Ranking"> 

  <br><br>

  <input type="submit" value="Create Goal">
</form>



{{!-- display list of goals with edit and delete button --}}

<div class="goals-list">
    
    <ul>
        {{#each Goal }}
             <li> {{ name }}  {{duration}}  {{riskRanking}}<span><a href="/goal/{{id}}">Delete</a></span></li>
        {{ else }}
            <li> No fines available</li>
        {{/each }}
    </ul>
</div>